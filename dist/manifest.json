{
    "name": "Developer Platform",
    "version": "1.0.0",
    "description": "Developer Platform gives you an array of tools for developers, create and manage projects",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "16": "images/faviconpic.png",
        "48": "images/faviconpic.png",
        "128": "images/faviconpic.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/faviconpic.png"
    },
    
    "manifest_version": 3,
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
      }
}