{
    "name": "Simple Toggle Sites",
    "version": "1.0.0",
    "description": "A very basic extension to quickly block or allow a list of sites",
    "permissions": [
        "storage"
    ],
    "host_permissions": [
        "http://*/",
        "https://*/"
    ],
    "icons": {
        "16": "images/faviconpic.png",
        "48": "images/faviconpic.png",
        "128": "images/faviconpic.png"
    },
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/faviconpic.png"
    },
    
    "manifest_version": 3
}